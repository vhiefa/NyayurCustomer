<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vhiefa.nyayur.activity.ProfilActivity">

    <TextView
        android:text="Nama"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nama_cust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="No HP"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nope_cust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Alamat"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/alamat_cust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:text="Tukang Sayur Langganan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tukang_cust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ubahProfilBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Profil"/>

    <Button
        android:id="@+id/ubahTukangSayur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Tukang Sayur"/>

    <Button
        android:id="@+id/daftarBelanjaBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Daftar Belanja"/>

    <Button
        android:id="@+id/ubahPwdBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Password"/>

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"/>

</LinearLayout>
